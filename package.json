  "repository": "VladShcherbin/handcuffs",
  "main": "dist/node/cjs/index.js",
  "module": "dist/node/es/index.js",
  "browser": {
    "dist/node/cjs/index.js": "./dist/browser/cjs/index.js",
    "dist/node/es/index.js": "./dist/browser/es/index.js"
  },
  "scripts": {
