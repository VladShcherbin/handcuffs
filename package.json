{
  "name": "handcuffs",
  "version": "0.3.0",
  "description": "Validation library",
  "repository": "https://github.com/VladShcherbin/handcuffs",
  "author": "Vlad Shcherbin",
  "main": "dist/node/index.js",
  "module": "dist/node-es/index.js",
  "browser": {
    "dist/node/index.js": "dist/browser/index.js",
    "dist/node-es/index.js": "dist/browser-es/index.js"
  },
  "files": [
    "*.md",
    "dist"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run build:node && yarn run build:node-es && yarn run build:browser && yarn run build:browser-es",
    "build:node": "BABEL_ENV=node babel src -d dist/node",
    "build:node-es": "BABEL_ENV=node-es babel src -d dist/node-es",
    "build:browser": "BABEL_ENV=browser babel src -d dist/browser",
    "build:browser-es": "BABEL_ENV=browser-es babel src -d dist/browser-es",
    "clean": "rimraf dist",
    "example": "BABEL_ENV=node-es nodemon --watch example --watch src --exec babel-node example",
    "lint": "eslint src",
    "test": "BABEL_ENV=node jest --coverage && codecov",
    "test:coverage": "BABEL_ENV=node jest --coverage",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn run lint && yarn run test:coverage",
    "postpublish": "yarn run clean"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "codecov": "^2.3.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.2.0",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1"
  },
  "license": "MIT"
}
